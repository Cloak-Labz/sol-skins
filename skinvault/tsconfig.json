{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["mocha", "node"],
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["tests/**/*", "scripts/**/*", "app/sdk/**/*"],
  "exclude": ["node_modules", "dist"]
}
